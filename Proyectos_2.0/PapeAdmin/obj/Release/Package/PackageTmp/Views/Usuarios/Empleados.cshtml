
@{
    ViewBag.Title = "Empleados";
    Layout = "~/Views/Master/Sistema.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div style="font-size:x-large;" class="card-header">
                            Usuarios > Empleados
                        </div>
                        <div class="card-body card-block">
                            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                                <div class="row form-group">
                                    <div class="col-12 col-md-8">
                                        <small style="font-size:medium;" class="form-text text-muted">Foto del Empleado</small>
                                        <input type="file" id="file-input" name="file-input" class="form-control-file" onchange="PreviewImage(event)">
                                    </div>
                                    <div class="col-12 col-md-4">
                                        <img style="width: 200px; height: 200px" id="PreviewImageID" src="~/Style/images/picture.png">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-12 col-md-2">
                                        <small style="font-size:medium;" class="form-text text-muted">Código</small>
                                        <input disabled type="text" id="text-input" name="text-input" class="form-control">
                                    </div>
                                    <div class="col-12 col-md-4">
                                        <small style="font-size:medium;" class="form-text text-muted">Nombres</small>
                                        <input type="text" id="text-input" name="text-input" class="form-control">
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <small style="font-size:medium;" class="form-text text-muted">Apellido Paterno</small>
                                        <input type="text" id="text-input" name="text-input" class="form-control">
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <small style="font-size:medium;" class="form-text text-muted">Apellido Paterno</small>
                                        <input type="text" id="text-input" name="text-input" class="form-control">
                                    </div>
                                </div>
                                <small style="font-size:medium;" class="form-text text-muted">Fecha de nacimiento</small>
                                <div class="row form-group">
                                    <div class="col-12 col-md-2">
                                        <small style="font-size:medium;" class="form-text text-muted">Dia</small>
                                        <input type="number" id="text-input" name="text-input" class="form-control">
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <small style="font-size:medium;" class="form-text text-muted">Mes</small>
                                        <select name="select" id="select" class="form-control">
                                            <option value="0">Seleccione</option>
                                            <option value="1">Enero</option>
                                            <option value="2">Febrero</option>
                                            <option value="3">Marzo</option>
                                            <option value="4">Abril</option>
                                            <option value="5">Mayo</option>
                                            <option value="6">Junio</option>
                                            <option value="7">Julio</option>
                                            <option value="8">Agosto</option>
                                            <option value="9">Septiembre</option>
                                            <option value="10">Octubre</option>
                                            <option value="11">Noviembre</option>
                                            <option value="12">Diciembre</option>
                                        </select>
                                    </div>
                                    <div class="col-12 col-md-2">
                                        <small style="font-size:medium;" class="form-text text-muted">Año</small>
                                        <input type="number" id="text-input" name="text-input" class="form-control">
                                    </div>
                                    <div class="col-12 col-md-5">
                                        <small style="font-size:medium;" class="form-text text-muted">Cargo</small>
                                        <input type="text" id="text-input" name="text-input" class="form-control">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col-12 col-md-6">
                                        <small style="font-size:medium;" class="form-text text-muted">Usuario</small>
                                        <input type="text" id="text-input" name="text-input" class="form-control">
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <small style="font-size:medium;" class="form-text text-muted">Contraseña</small>
                                        <input type="password" id="text-input" name="text-input" class="form-control">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fa fa-floppy-o"></i> Guardar
                            </button>
                            <button type="reset" class="btn btn-danger btn-sm">
                                <i class="fa fa-ban"></i> Cancelar
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="container-fluid">
            <div class="row m-t-30">
                <div class="col-md-12">
                    <!-- DATA TABLE-->
                    <div class="table-responsive m-b-40">
                        <table class="table table-borderless table-data3">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Nombre</th>
                                    <th>Fecha de Nacimiento</th>
                                    <th>Cargo</th>
                                    <th>Imagen</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2018-09-29 05:57</td>
                                    <td>Mobile</td>
                                    <td>iPhone X 64Gb Grey</td>
                                    <td>Processed</td>
                                    <td>Imagen</td>
                                    <td>$999.00</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE-->
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function PreviewImage(event) {
        var output = document.getElementById('PreviewImageID');
        output.src = URL.createObjectURL(event.target.files[0]);
    };
</script>
